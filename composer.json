{
    "name": "gpht/oidc",
    "type": "library",
    "description": "OIDC (OpenID Connect) library ",
    "license": "MIT",
    "require": {
        "php": ">=8.3",
        "nyholm/psr7": "^1.8",
        "psr/cache": "^3.0",
        "psr/http-client": "^1.0",
        "symfony/security-core": "^6.4|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^12.0",
        "vimeo/psalm": "^5.0|^6.0|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Gpht\\Oidc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-fix": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix",
        "cs-check": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --dry-run --diff",
        "psalm": "psalm",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-text"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
